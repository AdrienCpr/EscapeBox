{
  "name": "escape-box",
  "version": "1.0.0",
  "description": "EscapeBox Game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.escape.box",
    "productName": "EscapeBox",
    "files": [
      "**/*",
      "!node_modules/",
      "!dist/",
      "!build/"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}